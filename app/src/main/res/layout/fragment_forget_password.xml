<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_15sdp">

    <RelativeLayout
        android:id="@+id/layout_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        tools:context=".Fragments.ForgetPassFragment">

        <!-- TODO: Update blank fragment layout -->
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_text"
            android:hint="Email"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/round_button"
            android:text="validate"
            android:textColor="@color/white_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:context=".Fragments.ForgetPassFragment">

        <TextView
            android:id="@+id/txt_message_to_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter verification code"
            android:textAlignment="center"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/edt_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_message_to_enter"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/round_text"
            android:hint="Code"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_code"
            android:layout_marginLeft="@dimen/_120sdp"
            android:background="@drawable/round_button"
            android:text="send" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:visibility="gone"
        tools:context=".Fragments.ForgetPassFragment">


        <EditText
            android:id="@+id/edt_pss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/round_text"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edt_con_pss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_pss"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/round_text"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_con_pss"
            android:layout_marginLeft="@dimen/_110sdp"
            android:background="@drawable/round_button"
            android:text="Set Password" />
    </RelativeLayout>

</RelativeLayout>